# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=clothing_store
DB_USER=postgres
DB_PASSWORD=your_password

# AFIP Configuration
AFIP_CUIT=your_cuit
AFIP_CERT_PATH=./certificates/certificate.crt
AFIP_KEY_PATH=./certificates/private.key
AFIP_ENVIRONMENT=testing  # testing or production

# Tienda Nube Configuration
TIENDANUBE_CLIENT_ID=your_client_id
TIENDANUBE_CLIENT_SECRET=your_client_secret
TIENDANUBE_STORE_ID=your_store_id

# MercadoLibre Configuration
ML_CLIENT_ID=your_client_id
ML_CLIENT_SECRET=your_client_secret
ML_REDIRECT_URI=http://localhost:3000/auth/mercadolibre/callback

# JWT Configuration
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=24h

# Server Configuration
PORT=3000
NODE_ENV=development
